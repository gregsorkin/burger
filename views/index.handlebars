<div class="row">
    {{!-- Add your burgers on this side --}}
    <div class="col-md-6">
        <h3>Orders up!</h3>
        <div id="orders">
            {{#each burgers}}
                {{#unless this.devoured}}
                <p>{{id}}.{{burger_name}}
                    <span class="eatButton">
                        <button class="btn btn-success eatDaBurger" data-id="{{id}}" data-devoured=false type="button">  
                            {{#if devoured}}Devoured!{{else}}Eat Dat Burger! <i class="fas fa-teeth-open"></i>{{/if}}
                        </button>
                    </span>
                </p>
                {{/unless}}
            {{/each}}
        </div>
    </div>

    {{!-- See what's been eaten already on this side --}}
    <div class="col-md-6">
        <h3>These're going on your tab.</h3>
        <div class="billed">
            {{#each burgers}}
                {{#if devoured}}
                    <div class="input">
                        <li class="formMaintenance">
                            {{id}}.{{burger_name}}
                        </li>
                    </div>
                {{/if}}
            {{/each}}
        </div>
    </div>
</div>