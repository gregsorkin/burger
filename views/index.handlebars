<div class="row">
    {{!-- Add your burgers on this side --}}
    <div class="col-md-6">
        <h3>Orders up!</h3>
        <div id="orders">
            {{#each burgers}}
                {{#unless devoured}}
                <form action="burger/eat/{{id}}" method="POST">
                    <div class="input">
                        <li class="formMaintenance">
                            {{id}}.{{burger_name}}
                        </li>
                        <span class="eatButton">
                            <button class="btn btn-success eatDaBurger" type="submit">Eat Dat Burger!  <i class="fas fa-teeth-open"></i></button>
                        </span>
                    </div>
                </form>
                {{/unless}}
            {{/each}}
        </div>
    </div>

    {{!-- See what's been eaten already on this side --}}
    <div class="col-md-6">
        <h3>These're going on your tab.</h3>
        <div class="billed">
            {{#each burgers}}
                {{#if this.devoured}}
                    <div class="input">
                        <li class="formMaintenance">
                            {{this.id}}.{{this.burger_name}}
                        </li>
                    </div>
                {{/if}}
            {{/each}}
        </div>
    </div>
</div>